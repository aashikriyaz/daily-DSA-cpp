class Solution {
public:
    int maxDepth(string arr) {
        int n=arr.size();
        int count=0;
        int maxi=0;
        for(int i=0;i<n;i++){
            if(arr[i]=='(') {
                count++;
                maxi=max(maxi,count);
            }
            else if(arr[i]==')') count--;
            
        }
       return maxi; 
    }
};
